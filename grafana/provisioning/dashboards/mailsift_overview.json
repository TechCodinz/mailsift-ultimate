{
  "uid": "mailsift-overview",
  "title": "MailSift Overview",
  "schemaVersion": 38,
  "version": 1,
  "editable": true,
  "refresh": "10s",
  "timezone": "browser",
  "time": { "from": "now-6h", "to": "now" },
  "panels": [
    {
      "type": "stat",
      "title": "Requests (5m)",
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 6 },
      "targets": [
        { "expr": "sum(rate(mailsift_http_requests_total[5m]))", "refId": "A" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "orientation": "horizontal" }
    },
    {
      "type": "stat",
      "title": "p95 latency (ms)",
      "gridPos": { "x": 8, "y": 0, "w": 8, "h": 6 },
      "targets": [
        { "expr": "histogram_quantile(0.95, sum by (le) (rate(mailsift_http_request_duration_seconds_bucket[5m]))) * 1000", "refId": "A" }
      ],
      "options": { "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false }, "orientation": "horizontal" }
    },
    {
      "type": "bargauge",
      "title": "Requests by status (5m)",
      "gridPos": { "x": 16, "y": 0, "w": 8, "h": 6 },
      "targets": [
        { "expr": "sum by (status) (rate(mailsift_http_requests_total[5m]))", "refId": "A" }
      ],
      "options": { "displayMode": "basic", "orientation": "horizontal" }
    },
    {
      "type": "table",
      "title": "Top endpoints (5m)",
      "gridPos": { "x": 0, "y": 6, "w": 24, "h": 10 },
      "targets": [
        { "expr": "topk(5, sum by (path) (rate(mailsift_http_requests_total[5m])))", "refId": "A" }
      ],
      "options": { "showHeader": true }
    }
  ]
}