# MailSift Ultra Configuration
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=development
FLASK_SECRET_KEY=your-secret-key-here-change-in-production
MAILSIFT_SECRET=your-hmac-secret-key-here

# Database
DATABASE_URL=postgresql://user:password@localhost/mailsift
REDIS_URL=redis://localhost:6379
MAILSIFT_SQLITE_DB=mailsift.db

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs
STRIPE_STARTER_MONTHLY=price_starter_monthly_id
STRIPE_STARTER_YEARLY=price_starter_yearly_id
STRIPE_PRO_MONTHLY=price_pro_monthly_id
STRIPE_PRO_YEARLY=price_pro_yearly_id
STRIPE_ENTERPRISE_MONTHLY=price_enterprise_monthly_id
STRIPE_ENTERPRISE_YEARLY=price_enterprise_yearly_id

# AI Services
OPENAI_API_KEY=sk-your-openai-api-key
CLEARBIT_API_KEY=your-clearbit-api-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@mailsift.com

# Crypto Payments (Optional)
MAILSIFT_WALLET_BTC=your-btc-address
MAILSIFT_WALLET_TRC20=your-trc20-address
MAILSIFT_WALLET_ETH=your-eth-address
MAILSIFT_RECEIVE_ADDRESS=your-receive-address
TRONGRID_KEY=your-trongrid-api-key

# Admin Configuration
MAILSIFT_ADMIN_KEY=strong-admin-key-here
ADMIN_IP_ALLOWLIST=127.0.0.1,::1

# Rate Limiting
GLOBAL_RATE_LIMIT=120 per minute
SCRAPE_RATE_LIMIT=20/minute
PAY_RATE_LIMIT=5/minute
ADMIN_RATE_LIMIT=60/minute

# Usage Limits
FREE_SCRAPE_QUOTA=3
MAX_CONTENT_LENGTH_MB=50

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_TRACES=0.1

# Security
SESSION_COOKIE_SECURE=true
JWT_SECRET=your-jwt-secret-key

# Feature Flags
ENABLE_AI_INTELLIGENCE=true
ENABLE_BULK_PROCESSING=true
ENABLE_WEBHOOKS=true
ENABLE_ANALYTICS=true